[user]
	name = Naokazu Terada
	email = naokazu.terada@gmail.com

[core]
	editor = vi
	quotepath = false
	excludesfile = ~/.gitignore_global

[color]
	ui = true

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"

[mergetool "sourcetree"]
	#keepBackup = true
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[merge]
	ff = true

[credential]
	helper = osxkeychain

[alias]
	co = checkout
	
	#tree = log --graph --oneline --all
	tree = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
	
	# http://blog.blindgaenger.net/advanced_git_aliases.html
  this   = !git init && git add . && git commit -m \"Initial commit\"
  
  # diff zip archive
  # git zip [start-SHA1] [end-SHA1] [filename]
  zip = "!f () {\
  	git archive --format=zip --prefix=${3}/ HEAD `git diff --name-only ${1} ${2}` -o ${3}.zip;\
  };f"

